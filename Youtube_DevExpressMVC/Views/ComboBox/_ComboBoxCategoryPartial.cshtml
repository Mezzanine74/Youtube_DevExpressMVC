@Html.DevExpress().ComboBox(settings => {
    settings.Name = "ComboBoxCategory";
    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
    settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.OnHover;

    settings.CallbackRouteValues = new { Controller = "ComboBox", Action = "ComboBoxCategoryPartial" };
    settings.Properties.CallbackPageSize = 20;
    settings.Properties.ValueField = "Id";
    settings.Properties.TextField = "CategoryName";

    settings.Width = 250;
    settings.Properties.DropDownHeight = Unit.Pixel(200);

    settings.Properties.Columns.Add("CategoryName", "Product Name", 100);

    settings.Properties.ClientSideEvents.GotFocus = "function(s,e){s.ShowDropDown();}";
    settings.Properties.ClientSideEvents.ValueChanged = "function(s,e){comboBoxCategoryValueChanged(s,e);}";
    

    }).BindList(Model).GetHtml()