@Html.DevExpress().ComboBox(settings => {
    settings.Name = "ComboBoxSupplier";
    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
    settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.OnHover;

    settings.CallbackRouteValues = new { Controller = "ComboBox", Action = "ComboBoxSupplierPartial" };
    settings.Properties.CallbackPageSize = 20;
    settings.Properties.ValueField = "Id";
    settings.Properties.TextField = "CompanyName";

    settings.Width = 250;
    settings.Properties.DropDownHeight = Unit.Pixel(200);

    settings.Properties.Columns.Add("CompanyName", "Company Name", 100);
    settings.Properties.Columns.Add("ContactName", "Contact Name", 100);

    settings.Properties.ClientSideEvents.GotFocus = "function(s,e){s.ShowDropDown();}";
    settings.Properties.ClientSideEvents.ValueChanged = "function(s,e){comboBoxSupplierValueChanged(s,e);}";
    settings.Properties.ClientSideEvents.Init = "function(s,e){comboBoxSupplierInit(s,e)}";

}).BindList(Model).GetHtml()